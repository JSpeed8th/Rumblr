
<h1> Edit Page </h1>

<%= @user.fname %>

<%= form_for @user do |u| %>
  <div> <%= u.text_field :fname %> <%= u.text_field :lname %> </div>
  <div> <%= u.text_field :about_me, placeholder: 'About me'%> </div>
  <div> <%= u.date_field :birthdate %> </div>
  <%= u.submit %>
<% end %>

