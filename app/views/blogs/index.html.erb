<div class="grid-wrapper">
  <div class= "blogpost-wrapper">
    <h1>  <a href="/users/<%= current_user.id %>"> <%= @user.fname %> <%= @user.lname %>  </a> </h1>
    <h2>Share a new Recipe: </h2>
    <%= form_for @blog do |f| %>
    <%= f.text_field :title, placeholder: 'Recipe Name', class: "recipe-name"%>
    <%= f.text_area :body, class: "recipe-steps", placeholder: "type your recipe here."%>
    <%= hidden_field_tag :user_id, @user.id %>
    <%= f.submit 'share', class: "submit-btn"%>
    <% end %>
  </div>

  <div class= "posted-blog-wrapper">
    <% @blogs.reverse.each do |x| %>
      <h3> <a href="/blogs/<%= x.id %>/edit"> <%= x.title %> </a> </h3>
      <author>Posted by: <a href="/users/<%= x.id %>"> <%= x.user.fname %> </a></author>
      <div><%= x.body %></div>
      <time datetime= "<%= x.updated_at %>">published: <%= x.updated_at %> </time>

      <br><h3>Comments: </h3>
      <% x.comments.each do |c| %>
        <div><%= c.user.fname %> says... <%= c.body %></div>
      <% end %>

      <% if user_signed_in? %>
        <%= form_for([x, x.comments.build]) do |f| %>
          <%= f.text_field :body, class:"comment-field", placeholder: "what's on your mind?" %> <br />

        <% end %>
        <div class="bottom-border"> </div>
      <% end %>
    <% end %>

  </div>
  <div class="other-users-wrapper">
    <h3>Make Aquaintence With Our Other Fellow Bakers</h3>
    <% @allUsers.each do |u| %>
      <ul>
        <li><a href="/users/<%= u.id %>"> <%= u.fname %> <%= u.lname %> </a></li>
      </ul>
    <% end %>
  </div>
</div>
