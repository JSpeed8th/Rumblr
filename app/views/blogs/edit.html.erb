<div class="blogpost-wrapper edit-page-top-margin">
  <h1>  <a href="/users/<%= current_user.id %>"> <%= @user.fname %> <%= @user.lname %>  </a> </h1>
  <h2> Edit Your Recipe </h2>
  <%= form_for @blog do |f| %>
  <div class='title'><%= f.text_field :title, class: 'recipe-name', placeholder: 'Add Title' %></div>
  <div class='content'><%= f.text_area :body, class:'recipe-steps ', autocomplete: 'off', placeholder: 'Add Content'%></div>
  <%= f.submit class:'submit-btn' %>
  <% end %>
  <br>
  <hr>
  <%= link_to "Delete Recipe", blog_path, method: :delete, class:'extra-margin' %>

  <%= link_to 'Back', :back, class:'extra-margin' %>
</div>
